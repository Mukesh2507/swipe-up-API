<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageAccount">
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/back_arrow" />

        <TextView
            android:id="@+id/textView"
            android:textStyle="bold"
            android:fontFamily="@font/inter_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:text="@string/ma5"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/view_gray"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ma_phone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="+380*******999"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="@string/ma1"
                android:layout_marginTop="2dp"
                android:textColor="@color/view_gray"
                android:textSize="13dp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ma_email" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="a******i@gmail.com"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="@string/ma2"
                android:layout_marginTop="2dp"
                android:textColor="@color/view_gray"
                android:textSize="13dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ma_lock" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="********"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="@string/ma3"
                android:layout_marginTop="2dp"
                android:textColor="@color/view_gray"
                android:textSize="13dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ma_globe" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="India"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content"
                android:text="@string/ma4"
                android:layout_marginTop="2dp"
                android:textColor="@color/view_gray"
                android:textSize="13dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>